    %link{ :href => "/bootstrap/css/bootstrap.css", :type => "text/css", :rel => "stylesheet" }

    %link{ :href => "/css/styles.css", :type => "text/css", :rel => "stylesheet" }

    %link{ :href => "/bootstrap/css/bootstrap-responsive.css", :type => "text/css", :rel => "stylesheet" }	



  %head
    %h1.title Principal Sport Reservations
    #main
      - if signed_in?
        #applink.childDiv2= link_to "Sign-Out", signout_path, :method => :delete, :id => "Sign-Out"
        #applink.childDiv2= link_to "Legal", user_path(current_user), :method => :get, :id => "Profile"
        #applink.childDiv2= link_to "Home", home_path, :method => :get
        %br
        #userinfo.childDiv2
          Current User: 
          = current_user.username      
      %br
      %br
      
      %div= yield
      = render :partial => 'layouts/footer'

      
