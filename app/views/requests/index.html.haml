-# in app/views/movies/show.html.haml

%table
  %thead 
    %tr
      %th Venue
      %th Status
      %th Request
  %tbody
    - @my_requests.each do |request|
      - @venue = Venue.find(request.venue_id)
      %tr
        %td
          = @venue.location
          , 
          = @venue.room
        %td= request.status
        %td= link_to "View", user_request_path(params[:user_id],request)
  %br
 
